+   end Info;
+
+   ------------
+   --  Open  --
+   ------------
+
+   procedure Open
+     (File_Name : in String)
+   is
+   begin
+      File.Open (File_Name);
+   end Open;
+
+   ---------------
+   --  Warning  --
+   ---------------
+
+   procedure Warning
+     (Message : in String)
+   is
+   begin
+      File.Put ("Warning", Message);
+   end Warning;
+
+end Logger;
