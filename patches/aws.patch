+   --  Insert_Association  --
+   --------------------------
+
+   procedure Insert_Association
+     (Item : Security.Association)
+   is
+      use Ada.Exceptions;
+   begin
+      Database.Insert (Item);
+   exception
+      when E : others =>
+         Log.Error ("Exception in Association_Database.Insert: " &
+                      Exception_Name (E) & " (" &
+                      Exception_Information (E) & ")");
+         raise;
+   end Insert_Association;
+
